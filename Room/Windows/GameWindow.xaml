<Window x:Class="Room.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Room.Controls"
        Title="GameWindow" WindowState="Maximized" ShowInTaskbar="False" Background="Black">

    <Grid x:Name="_root" Background="#01808080">
        <Canvas x:Name="_canvas" MouseMove="_canvas_OnMouseMove">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="_scaleTransform"/>
                    <TranslateTransform x:Name="_translateTransform"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
